# Production Environment Variables
# IMPORTANT: Change all passwords and secrets before deploying!

# Node Environment
NODE_ENV=production
PORT=5000

# Database Configuration
MYSQL_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_123
MYSQL_DATABASE=odonto_crm
MYSQL_USER=odonto_user
MYSQL_PASSWORD=CHANGE_THIS_USER_PASSWORD_456
DATABASE_URL=mysql://odonto_user:CHANGE_THIS_USER_PASSWORD_456@mysql:3306/odonto_crm

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_GENERATE_WITH_OPENSSL

# Encryption Key for API keys (must be exactly 32 characters)
ENCRYPTION_KEY=CHANGE_THIS_32_CHARACTER_KEY_12

# OpenAI API Key (optional, for IA features)
OPENAI_API_KEY=

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Timezone
TZ=America/La_Paz

# Domain (for SSL certificate)
DOMAIN=your-domain.com
